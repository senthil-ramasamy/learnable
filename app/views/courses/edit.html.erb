<%= link_to "Back to course", course_path(@course), class: 'button' %>

<h3> Update course </h3>
<%= form_for @course do |f| %>
  <% if @course.errors.any? %>
  <div id="error_explanation">
    <p class="alert-box alert"><%= pluralize(@course.errors.count, "error") %> prohibited this post from being saved:</p>

    <ul>
    <% @course.errors.full_messages.each do |msg| %>
      <li class="alert-box secondary"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'UPDATE COURSE', class: 'button' %>
  </p>
<% end %>
