<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Learnable</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Cabin:400,700,500italic' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class='fixed row'>
    <h1><span class="subheader">Learn</span>Able</h1>
    <div class="top-bar contain-to-grid">
      <section class="top-bar-section contain-to-grid">
        <ul class="right inline-list contain-to-grid">
            <li>
              <%= link_to "Home", root_path %>
            </li>

          <% if user_signed_in? %>
            <li>
              <%= link_to 'Courses', courses_path %>
            <li>
              <%= link_to 'My Profile', user_path(current_user) %>
            </li>

              <% if current_user.admin? %>
                <li>
                  <%= link_to 'Admin', admin_users_path %>
                </li>
              <% end %>

            <li>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            </li>
          <% else %>
            <li>
            <%= link_to('Login', new_user_session_path) %>
            </li>
          <% end %>
        </ul>
      </section>
    </div>
  </div>

  <div id='flash'>
    <% if flash[:notice] %>
      <br>
      <div class="alert-box success radius"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <br>
      <div class="alert-box alert"><%= flash[:alert] %></div>
    <% end %>
  </div>
<%= yield %>

</body>
</html>
